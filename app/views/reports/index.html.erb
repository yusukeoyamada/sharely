<h1>投稿一覧</h1>

<table>
  <tr>
    <th>投稿者名</th>
    <th>タイトル</th>
  </tr>

  <% @reports.each do |report| %>
      <tr>
        <td><%= report.user.name%></td>
        <td><%= link_to report.title, report_path(report.id) %></td>
      </tr>
  <% end %>
</table>

<br>

<%= link_to '投稿する', new_report_path %>
